{
  "root": true,
  "parser": "@typescript-eslint/parser",
  "plugins": ["@typescript-eslint", "eslint-plugin-import-helpers"],
  "env": {
    "es2020": true,
    "node": true,
    "jest": true
  },
  "extends": ["plugin:@shopify/esnext", "plugin:@shopify/node", "plugin:@shopify/prettier"],
  "rules": {
    "prettier/prettier": ["error", {
      "singleQuote": true,
      "printWidth": 210,
      "tabWidth": 2,
      "useTabs": true,
      "semi": true,
      "jsxSingleQuote": true,
      "trailingComma": "es5",
      "bracketSpacing": true,
      "arrowFunctionParens": "always",
      "bracketLine": true
    }],
    "no-undef": "off",
    "camelcase": "off",
    "no-unused-vars": "off",
    "no-useless-constructor": "off",
    "@typescript-eslint/no-unused-vars": "warn"
  },
  "settings": {
    "import/resolver": {
      "typescript": {}
    }
  }
}